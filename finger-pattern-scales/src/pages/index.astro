---
import Layout from '../layouts/Layout.astro';
import FingerDisplay from '../components/FingerDisplay.astro';
import patterns from '../patterns';
---
<script src="../activeFinger.js"></script>

<Layout title="Violin Finger Patterns">
  <div class="container mx-auto px-2 font-serif">
    <header class="my-8 w-full flex justify-center">
      <h1
        class="text-xl sm:text-3xl font-bold border-b-2 pb-1 px-2 border-fuchsia-600"
      >
        Violin Finger Patterns
      </h1>
    </header>
    <div class="grid grid-cols-2 gap-2">
    {Object.keys(patterns.normal).map((key) => (
    <div class="my-2">
        <h2 class="text-xl tracking-wide">{patterns.normal[key].name}</h2>
      <FingerDisplay joinedId={key} radius={2} widths={patterns.normal[key].widths} />
    </div>
    ))}
  </div>
</div>

</Layout>
